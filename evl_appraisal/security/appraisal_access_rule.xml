<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="admin_super_access" model="ir.rule">
            <field name="name">HR Admin</field>
            <field name="model_id" ref="evl_appraisal.model_evl_hr_appraisal"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_erp_manager')), (4, ref('evl_appraisal.group_hradmins_manager'))]"/>
        </record>

        <record id="appraisal_comp_rule" model="ir.rule">
            <field name="name">Transfer multi company rule</field>
            <field name="model_id" ref="evl_appraisal.model_evl_hr_appraisal"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>


        <record id="appraisal_manager_access" model="ir.rule">
            <field name="name">Manager Record Rule</field>
            <field name="model_id" ref="evl_appraisal.model_evl_hr_appraisal"/>
            <field name="domain_force">['|',
'|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id),
'|', '|', ('department_id', '=', False), ('department_id.member_ids.user_id', 'in', [user.id]), ('department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>


    </data>
</odoo>


