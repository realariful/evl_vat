<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_evl_attendance">
            <field name="name">Employee Attendance Report</field>
            <field name="sequence">59</field>
        </record>

        <!-->>>>>>>>>>>>>>>>>>>>> groups -->
        <record id="attendance_group_manager" model="res.groups">
            <field name="name">Attendance Admin</field>
            <field name="category_id" ref="module_category_evl_attendance"/>
        </record>



        <record id="attendance_group_user" model="res.groups">
            <field name="name">General User</field>
            <field name="category_id" ref="module_category_evl_attendance"/>
        </record>

        <!-->>>>>>>>>>>>>>>>>>>>> access rules -->


        <record id="admin_super_access_attandance" model="ir.rule">
            <field name="name">Manager</field>
            <field name="model_id" ref="model_evl_attendance"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(6,0,[
                                            ref('attendance_group_manager'),
                                        ])]"/>
        </record>



        <record id="attendance_general" model="ir.rule">
            <field name="name">User</field>
            <field name="model_id" ref="model_evl_attendance"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('attendance_group_user'),ref('base.group_user')])]"/>
        </record>

    </data>
</odoo>
