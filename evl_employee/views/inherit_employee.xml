<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">


        <record id="view_employee_form_inherit_education" model="ir.ui.view">
            <field name="name">hr_employee_inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">

                <xpath expr="//page[@name='personal_information']//group//group[last()]" position="replace">
                   .
                </xpath>

                <xpath expr="//page[@name='personal_information']" position="attributes">

                    <attribute name="string">Personal Information</attribute>

                </xpath>

                <xpath expr="//field[@name='address_home_id']" position="after">

                    <field name="presentAddress" />
                    <field name="permanentAddress" />


                </xpath>

                <xpath expr="//field[@name='address_home_id']" position="attributes">

                    <attribute name="invisible">1</attribute>

                </xpath>

                <xpath expr="//field[@name='address_home_id']" position="attributes">

                    <attribute name="invisible">1</attribute>

                </xpath>

                <xpath expr="//field[@name='private_email']" position="attributes">

                    <attribute name="readonly">0</attribute>

                </xpath>


                <xpath expr="//field[@name='phone']" position="attributes">

                    <attribute name="readonly">0</attribute>

                </xpath>


                <xpath expr="//page[@name='public']" position="attributes">

                    <attribute name="string">Organization Information</attribute>

                </xpath>

                <xpath expr="//field[@name='identification_id']" position="before">
                    <field name="nid" />

                </xpath>

                <xpath expr="//field[@name='km_home_work']" position="after">
                    <field name="fatherName" />
                    <field name="mothersName" />
                    <field name="spouseName" />
                    <field name="group" />
                    <field name="reference" widget="many2many_tags" string='Employee Reference' />
                    <field name="religion" />
                </xpath>

                <xpath expr="//field[@name='group']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>


                <xpath expr="//page[@name='hr_settings']" position="after">

                    <page name="Education" string="Education">
                        <group string="Degree" name="evl_employee_degree">
                            <field name="education" />
                        </group>

                    </page>

                    <page name="training_experience" string="Training">
                        <group string="Trainings" name="evl_employee_training">
                            <field name="training" />
                        </group>

                    </page>

                    <page name="experience" string="Experience">

                        <group string="Experience" name="evl_employee_experience">
                            <field name="workExperience" />
                        </group>
                    </page>

                    <page name="employee_nominee" string="Nominee">
                        <group string="Nominees" name="evl_employee_nominee">
                            <field name="nominee" />
                        </group>

                    </page>

                    <page name="punishments" groups="hr.group_hr_manager,base.group_erp_manager" string="Punishments">
                        <group string="Punishments History" name="evl_employee_punishments">
                            <field name="punishments" />
                        </group>

                    </page>
                </xpath>

            </field>
        </record>





    </data>
</odoo>
