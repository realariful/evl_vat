<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="hr_employee_general" model="ir.rule">
            <field name="name">Employee Internal User</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">['|',('user_id', '=', user.id),'|',('parent_id.user_id', '=', user.id),('department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="evl_employee_group_manager" model="res.groups">
            <field name="name">Employee Manager</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
        </record>


        <record id="evl_employee_manager" model="ir.rule">
            <field name="name">Manager</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">['|',('user_id', '=', user.id),'|',('parent_id.user_id', '=', user.id),('department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('evl_employee_group_manager'))]"/>
        </record>


        <record id="evl_employee_officer" model="ir.rule">
            <field name="name">Employee Offcier</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('hr.group_hr_user')])]"/>
        </record>


        <record id="admin_super_access_employee" model="ir.rule">
            <field name="name">HR Admin/Payrol Admin</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_erp_manager')), (4, ref('om_hr_payroll.group_hr_payroll_manager')), (4, ref('evl_employee.group_hradmin_manager'))]"/>
        </record>


    </data>
</odoo>
