<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_category_evl_requisition">
            <field name="name">Requisition</field>
            <field name="description">Helps you manage your requisition and related workflows.</field>
            <field name="sequence">1</field>
        </record>

        <record id="evl_requisition_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="evl_requisition.module_category_evl_requisition"/>
        </record>

        <record id="evl_requisition_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="evl_requisition.module_category_evl_requisition"/>
        </record>

        <record id="evl_requisition_head" model="res.groups">
            <field name="name">Department Head</field>
            <field name="category_id" ref="evl_requisition.module_category_evl_requisition"/>
        </record>

        <record id="evl_requisition_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="evl_requisition.module_category_evl_requisition"/>
        </record>

        <record id="requisition_master_company_wise" model="ir.rule">
            <field name="name">Requisition Master Multi Company</field>
            <field name="model_id" ref="evl_requisition.model_requisition_master"/>
            <field name="domain_force">['|',('company_id','=', False),('company_id','in', company_ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

