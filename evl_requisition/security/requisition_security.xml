        <record id="requsition_user_only_self" model="ir.rule">
            <field name="name">Requisition users only can see their own records</field>
            <field name="model_id" ref="evl_requisition.model_requisition_master"/>
            <field name="domain_force">[('employee_id.user_id','=', user.id)]</field> 
            <field name="groups" eval="[(4, ref('evl_requisition.evl_requisition_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="requsition_manager_only_self" model="ir.rule">
            <field name="name">Requisition Managers can only can see own or subordinates' records</field>
            <field name="model_id" ref="evl_requisition.model_requisition_master"/>
            <field name="domain_force">['|', ('employee_id.user_id','=', user.id), ('employee_id.parent_id.user_id','=', user.id)]</field> 
            <field name="groups" eval="[(4, ref('evl_requisition.evl_requisition_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="requsition_head_only_self" model="ir.rule">
            <field name="name">Requisition department heads can only can see own or subordinates' records</field>
            <field name="model_id" ref="evl_requisition.model_requisition_master"/>
            <field name="domain_force">['|', ('employee_id.user_id','=', user.id), '|', ('employee_id.parent_id.user_id','=', user.id), ('employee_id.department_id.manager_id.user_id', '=', user.id)]</field> 
            <field name="groups" eval="[(4, ref('evl_requisition.evl_requisition_head'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
