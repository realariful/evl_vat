<odoo>
  <data >
    <!-- >>>>>>>>>>>>>>>>>>>>>>>> batch -->

    <record model="ir.ui.view" id="notice_batch_view_form">
      <field name="name">notice.batch.view.form</field>
      <field name="model">notice.batch</field>
      <field name="arch" type="xml">
        <form string="">

          <field name="state" invisible="1"/>
          <header>
            <button name="action_confirm" string="Confirm" states="draft" type="object" class="oe_highlight" />
            <button name="action_post" string="Post" states="confirm" type="object" class="oe_highlight" />
            <field name="state" widget="statusbar" />
          </header>
          <sheet>


            <div class="oe_title">
              <h1>
                <field name="title" attrs="{'readonly': [('state', '=', 'posted')]}" placeholder="Message Title" required="True"/>
              </h1>

            </div>
            <group style="width:100%%">
              <field  groups="evl_notice_board.notice_group_admin" name="employee_ids" attrs="{'readonly': [('state', '=', 'posted')]}" delete="true" options="{'no_create': True}"  string="Receipents" class="oe"/>
            </group>
            <group>



              <group string="Note" style="width:100%%">
                <field name="description" attrs="{'readonly': [('state', '=', 'posted')]}" nolabel="1" style="width:100%%"/>
              </group>

            </group>

            <!-- <group string="Notification Lines" style="width:100%%">
              <field name="lines" readonly="1" />
            </group> -->

            <group string="Attachments">
              <field name="attachment_ids" attrs="{'readonly': [('state', '=', 'posted')]}" widget="many2many_binary" string="Upload Files" nolabel="1"/>

            </group>

          </sheet>

          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>

        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="notice_batch_view_form_tree">
      <field name="name">evl.notice.batch.tree</field>
      <field name="model">notice.batch</field>
      <field name="arch" type="xml">
        <tree string="Notice Batch">
          <field name="title" string="Notice Title"/>
          <field name="gen_date"/>
          <field name="state" string="Status"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="evl_notice_batch_kanban">
      <field name="name">evl.notice.batch.kanban</field>
      <field name="model">notice.batch</field>
      <field name="arch" type="xml">
        <kanban >
          <!-- <field name="title"/> -->
          <field name="gen_date"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_vignette oe_semantic_html_override">
                <div class="oe_kanban_details">
                  <h4>
                    <a type="open">
                      <field name="title"/>
                    </a>
                  </h4>
                  <div name="tags"/>
                  <ul>
                    <li>Date Posted <field name="gen_date"></field>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <!-- >>>>>>>>>>>>>>>>>>>>>>>> batch -->

    <!-- model.name form view -->
    <record model="ir.ui.view" id="model_name_view_form">
      <field name="name">model.name.view.form</field>
      <field name="model">evl.notice.board</field>
      <field name="arch" type="xml">
        <form string="Notice Board">
          <field name="is_related_model" invisible="1"/>
          <field name="state" invisible="1" />

          <header>
            <button string="Mark as seen" name="action_seen" class="oe_highlight" type="object" attrs="{'invisible': ['|',('state', '!=', 'new')]}"/>
            <field name="state" widget="statusbar" />
          </header>
          <sheet>

            <div name="button_box" attrs="{'invisible': [('is_related_model', '=', False)]}" class="oe_button_box">
              <button name="related_model_view_form" string="Related Documents" class="oe_stat_button" icon="fa-arrows-v" type="object">
              </button>
            </div>
            <div class="oe_title">
              <h1>
                <field name="title" placeholder="Message Title" required="True"/>

              </h1>

            </div>
            <group>
              <field name="employee_id" style="width:20%%" string="Receipent"/>
              <field name="gen_date" style="width:20%%" string="Sent Date"/>
            </group>
            <group>



              <group attrs="{'invisible': [('is_related_model', '!=', False)]}" string="Note" style="width:100%%">
                <field name="description" nolabel="1" style="width:100%%"/>
              </group>



            </group>
            <group attrs="{'invisible': [('is_related_model', '!=', False)]}" string="Attachments">
              <field name="attachment_ids" widget="many2many_binary" string="Upload Files" nolabel="1"/>

            </group>
          </sheet>

          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>

        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_evl_notice_board_tree">
      <field name="name">evl.notice.board.tree</field>
      <field name="model">evl.notice.board</field>
      <field name="arch" type="xml">
        <tree create="false" string="Notice Board">
          <field name="employee_id" string="Empoloyee Name"/>

          <field name="gen_date"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="evl_notice_board_kanban">
      <field name="name">evl.notice.board.kanban</field>
      <field name="model">evl.notice.board</field>
      <field name="arch" type="xml">
        <kanban create="false">
          <field name="title"/>
          <field name="gen_date"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_vignette oe_semantic_html_override">
                <div class="oe_kanban_details">
                  <h4>
                    <a type="open">
                      <field name="title"/>
                    </a>
                  </h4>
                  <div name="tags"/>
                  <ul>
                    <li>Date Posted <field name="gen_date"></field>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record model="ir.actions.act_window" id="notice_board_action">
      <field name="name">Notice Board</field>
      <field name="res_model">evl.notice.board</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="context">{'group_by':['state']}</field>

    </record>

    <record model="ir.actions.act_window" id="notice_board_action_bulk">
      <field name="name">Notice Board Batch</field>
      <field name="res_model">notice.batch</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="context">{'group_by':['state']}</field>

    </record>

    <menuitem id="notice_menue_root" groups="base.group_user" name="Notifications" sequence="12"/>
    <!-- <menuitem name="Notice Board" id = "Notice_board_notice_lines" parent="notice_menue_root" action="notice_board_action" /> -->
    <menuitem name="Bulk Notice" groups="base.group_user"
     id = "Notice_bulk_lines" parent="notice_menue_root" action="notice_board_action_bulk" />


  </data>
</odoo>