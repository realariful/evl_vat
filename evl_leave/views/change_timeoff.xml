      <record id="hr_holidays.hr_leave_menu_my" model="ir.ui.menu">        
        <field name="name">Leave Requests</field>      
      </record>

    <record id="hr_holidays.hr_leave_view_dashboard" model="ir.ui.view">
        <field name="name">hr.leave.view.dashboard.inherit</field>
        <field name="model">hr.leave</field>
        <field name="arch" type="xml">
            <calendar js_class="time_off_calendar" string="Leave Request" form_view_id="%(hr_holidays.hr_leave_view_form_dashboard)d" event_open_popup="true" date_start="date_from" date_stop="date_to" mode="month" quick_add="False" color="employee_id">
                <field name="display_name"/>
            </calendar>
        </field>
    </record>


