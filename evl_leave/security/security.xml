<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
         <data noupdate="0">
<!-- Record rules -->
    <record id="Leave User" model="ir.rule">
        <field name="name">See only his leaves</field>
        <field name="model_id" ref="model_hr_leave"/> 
        <field name="domain_force">[('user_id', '=', user.id)]</field>      
        <field name="groups" eval="[(4, ref('group_evl_leave_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="Leave Manager" model="ir.rule">
        <field name="name">See employees under him</field>
        <field name="model_id" ref="model_hr_leave"/> 
        <field name="domain_force">['|',('employee_id.user_id', '=', user.id),'|',('employee_id.parent_id.user_id', '=', user.id),('department_id.manager_id.user_id', '=', user.id)]</field>

        <field name="groups" eval="[(4, ref('group_evl_leave_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="hr_holidays.hr_leave_rule_employee" model="ir.rule">
        <field name="active" eval="0"/>
    </record>


