<odoo>
        <data noupdate="0">

                <record id="hr_attendance_view_form_hybrid" model="ir.ui.view">
                        <field name="name">hr.attendance.form</field>
                        <field name="model">hr.attendance</field>
                        <field name="arch" type="xml">
                                <form edit="false" create="false" string="Employee attendances">
                                        <header>
                                        </header>
                                        <sheet>
                                                <group>
                                                        <field name="record_date"/>
                                                        <field name="employee_id"/>
                                                        <field name="is_holiday"/>
                                                        <field name="expected_check_in" attrs="{'invisible': ['|',('is_holiday', '=', True)]}" widget="float_time"/>
                                                        <field name="expected_check_out" attrs="{'invisible': ['|',('is_holiday', '=', True)]}" widget="float_time"/>


                                                </group>


                                                <group>


                                                        <field name="check_in"/>
                                                        <field name="check_out"/>

                                                        <field name="late_time_daily" string="Late By" widget="float_time"/>
                                                        <field name="early_leave_time" widget="float_time"/>


                                                </group>

                                                <group>
                                                        <field name="attendance_id"/>

                                                        <field name="movement_id">
                                                                <tree>
                                                                        <field name='from_time' string='From'/>
                                                                        <field name='to_time' string='To'/>
                                                                        <field name='movement_hours'/>
                                                                </tree>
                                                        </field>

                                                        <field name="hr_leave_id"/>

                                                </group>
                                        </sheet>
                                </form>
                        </field>
                </record>



                <record id="view_attendance_tree_hybrid" model="ir.ui.view">
                        <field name="name">hr.attendance.tree</field>
                        <field name="model">hr.attendance</field>
                        <field name="arch" type="xml">
                                <tree create="false" string="Employee attendances">
                                        <field name="record_date"/>
                                        <field name="employee_id"/>
                                        <!-- <field name="expected_check_out"/> -->
                                        <field name="check_in" />
                                        <field name="check_out"/>
                                        <field name="remark" />
                                        <field name="late_time_daily" string="Late By" widget="float_time"/>
                                        <field name="early_leave_time" widget="float_time"/>
                                        <field name="worked_hours" string="Work Hours" widget="float_time"/>

                                </tree>
                        </field>
                </record>


                <record id="hybrid_report" model="ir.actions.act_window">
                        <field name="name">Employee Presence Analysis</field>
                        <field name="res_model">hr.attendance</field>
                        <field name="view_mode">tree,form</field>
                        <!-- <field name="search_view_id" ref="hr_applicant_view_search"/> -->
                        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_attendance_tree_hybrid')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hr_attendance_view_form_hybrid')})]"/>
                        <!-- <field name="context">{'search_default_creation_month': 1, 'search_default_job': 2}</field> -->
                </record>

                <menuitem id="hybrid_attendance_report_menu" name = "Hybrid Report" 
                action = "hybrid_report" parent="evlattendance.attendance_menu" sequence="01" />



        </data>

</odoo>