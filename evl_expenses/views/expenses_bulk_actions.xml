<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="expenses_to_payments_condition" model="ir.actions.server">
            <field name="name">Payments</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="evl_expenses.model_account_expenses" />
            <field name="binding_model_id" ref="evl_expenses.model_account_expenses" />
            <field name="state">code</field>
            <field name="code">
if records:
    action = records._payment_function()
            </field>
        </record>



        <record model="ir.actions.server" id="server_action_approve_Expense">
            <field name="name">Post All</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_expense_bank_payments"/>
            <field name="binding_model_id" ref="model_expense_bank_payments"/>
            <field name="code">
action=records.approve_expense()          
            </field>
            <field name='state'>code</field>
        </record>

        <record id="expenses_set_approve" model="ir.actions.server">
            <field name="name">Approve All</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="evl_expenses.model_account_expenses" />
            <field name="binding_model_id" ref="evl_expenses.model_account_expenses" />
            <field name="state">code</field>
            <field name="code">
if records:
    action = records.approve_bulk_expenses()
            </field>
        </record>



    </data>
</odoo>