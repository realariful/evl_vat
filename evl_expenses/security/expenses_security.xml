<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_category_evl_expenses">
            <field name="name">Expenses</field>
            <field name="description">Helps you handle your expenses and related payments.</field>
            <field name="sequence">1</field>
        </record>

        <record id="evl_expenses_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="evl_expenses.module_category_evl_expenses"/>
        </record>

        <record id="evl_expenses_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="evl_expenses.module_category_evl_expenses"/>
        </record>

        <record id="evl_expenses_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="evl_expenses.module_category_evl_expenses"/>
        </record>

        <record id="expenses_payments_company_wise" model="ir.rule">
            <field name="name">Expenses payments Multi Company</field>
            <field name="model_id" ref="evl_expenses.model_expense_bank_payments"/>
            <field name="domain_force">['|',('company_id','=', False),('company_id','in', company_ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="expenses_company_wise" model="ir.rule">
            <field name="name">Expenses Multi Company</field>
            <field name="model_id" ref="evl_expenses.model_account_expenses"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','in', company_ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="expenses_types_company_wise" model="ir.rule">
            <field name="name">Expenses Types Multi Company</field>
            <field name="model_id" ref="evl_expenses.model_expenses_type"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','in', company_ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="expense_user_only_self" model="ir.rule">
            <field name="name">Expense users only can see their own records</field>
            <field name="model_id" ref="evl_expenses.model_account_expenses"/>
            <field name="domain_force">[('employee_ids.user_id','=', user.id)]</field> 
            <field name="groups" eval="[(4, ref('evl_expenses.evl_expenses_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="expense_manager_only_self" model="ir.rule">
            <field name="name">Expense Managers can only can see own or subordinates' records</field>
            <field name="model_id" ref="evl_expenses.model_account_expenses"/>
            <field name="domain_force">['|', ('employee_ids.user_id','=', user.id), ('employee_ids.parent_id.user_id','=', user.id)]</field> 
            <field name="groups" eval="[(4, ref('evl_expenses.evl_expenses_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>