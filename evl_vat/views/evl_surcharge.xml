<odoo>
  <data>
    <record id="evl_surcharge_view_form" model="ir.ui.view">
      <field name="name"></field>
      <field name="model">evl.surcharge</field>

      <field name="priority">32</field>
      <field name="arch" type="xml">
        <form string="Surcharge Voucher">
          <sheet>
            <div class="oe_title">
                <h1>
                    <field name="name" readonly="1"/>
                </h1>
            </div>
            <div name="hscode_title">
                <h1>Surcharge Voucher</h1>
            </div>

            <group>
                <group>
                            <!-- <field name="name" readonly="1"/> -->
                            <field name="company_id" invisible="1"/>
                            <field name="surcharge_type"/>   


                            <field name="month"/>   
                            <field name="year"/>
                            <field name="date_submit"/>    
                            <field name="amount"/>        
                </group> 
                <group>
                            
                            <field name="description"/>   
                            <!-- <field name="debit_account_id"/>        
                            <field name="credit_account_id"/>         -->
                                                    
                </group> 
            </group> 
          </sheet>
        </form>
      </field>
  </record>

    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="evl_surcharge_view_list">
      <field name="name">evl.surcharge.view.list</field>
      <field name="model">evl.surcharge</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name" readonly="1"/>
            <field name="company_id" invisible="1"/>
             <field name="surcharge_type"/>   
            <field name="month"/>   
            <field name="year"/>
            <field name="date_submit"/>
            <field name="amount"/>        
            <field name="description"/>
            <!-- <field name="debit_account_id"/>        
            <field name="credit_account_id"/>  -->

        </tree>
      </field>
    </record> 


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="evl_surcharge_action">
      <field name="name">Surcharge Voucher</field>
      <field name="res_model">evl.surcharge</field>
      <field name="view_mode">tree,list,form</field>
    </record>

    <menuitem name="Surcharge Voucher" id="evl_vat.evl_surcharge" parent="evl_vat.evl_payments" action="evl_vat.evl_surcharge_action" sequence="2"/> 


  </data>
</odoo>
