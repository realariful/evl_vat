                        <field name="epz_name" attrs="{'invisible':[('sale_epz', '!=', True)]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after"> 
                        
                        <field name="sale_subtype"/> 
                </xpath> 
