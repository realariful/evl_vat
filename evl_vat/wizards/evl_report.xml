<?xml version="1.0"?>
<odoo>
    <record id="evl_report_action_form" model="ir.ui.view">
        <field name="name">wizard.example.form</field>
        <field name="model">wizard.example</field>
        <field name="arch" type="xml">
            <form string="Create Report">
                <group class="oe_title">
                    <field name="patient_id"/>
                    <field name="date_meeting"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="evl_report_action" model="ir.actions.act_window">
        <field name="name">EVL Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.example</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="evl_report_action_form"/>
        <field name="target">new</field>
    </record>

    <!--  -->
   <record id="evl_report_action_form_accounting" model="ir.ui.view">
        <field name="name">wizard.accounting.form</field>
        <field name="model">wizard.accounting</field>
        <field name="arch" type="xml">
            <form string="Create Report">
                <group class="oe_title">
                    <field name="account"/>
                    <field name="amount"/>
                    <field name="entry_date"/>
                </group>
                <footer>
                        <button name="print_report" string="Create" type="object" class="btn-primary"/>
                     <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="evl_report_action_accounting" model="ir.actions.act_window">
        <field name="name">EVL accounting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.accounting</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="evl_report_action_form_accounting"/>
        <field name="target">new</field>
    </record>

    <!--  -->

    <record id="report_mushak_4_3_action_form" model="ir.ui.view">
            <field name="name">mushak.inputoutput.form</field>
            <field name="model">mushak.inputoutput</field>
            <field name="arch" type="xml">
                <form string="Create Report">
                    <group class="oe_title">
                        <field name="company_id" invisible="1"/>                        
                        <field name="product_id"/>
                        <field name="bom_code"/>
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_mushak_4_3_action" model="ir.actions.act_window">
            <field name="name">Mushak 4.3 (Input-Output Coefficient)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mushak.inputoutput</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_mushak_4_3_action_form"/>
            <field name="target">new</field>
        </record>

    <record id="report_mushak_6_1_action_form" model="ir.ui.view">
            <field name="name">mushak.purchase.form</field>
            <field name="model">mushak.purchase</field>
            <field name="arch" type="xml">
                <form string="Create Report">
                    <group class="oe_title">
                        <field name="company_id" invisible="1"/>   
                        <field name="month"/>  

                        <field name="product_id"/>
                        
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_mushak_6_1_action" model="ir.actions.act_window">
            <field name="name">Mushak 6.1 (Purchase Book)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mushak.purchase</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_mushak_6_1_action_form"/>
            <field name="target">new</field>
        </record>
</odoo>