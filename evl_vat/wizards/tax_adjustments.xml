<?xml version="1.0"?>
    <odoo>
    
   

    <!-- Tax Adjustmnets WQizard -->
    <record id="evl_tax_adjustments_wizard" model="ir.ui.view">

        <field name="name">vat.adjustments.wizard.form</field>
        <field name="model">vat.adjustments.wizard</field>
        <field name="arch" type="xml">
        <form>
            <h1>
            <field name="reason" class="oe_inline" placeholder="Reason..."/>
            </h1>
            <group>
            <field name="country_id" invisible="1"/>
            <field name="tax_report_line_id" widget="selection" domain="[('tag_name', '!=', None), ('country_id', '=', country_id)]"/>
            </group>
            <group>
            <group>
            <field name="amount"/>
            </group>
            <group>
            <field name="adjustment_type"/>
            </group>
            <group string="Accounts">
            <field name="debit_account_id" options="{'no_create': True}"/>
            <field name="credit_account_id" options="{'no_create': True}"/>
            </group>
            <group string="Options">
            <field name="journal_id"/>
            <field name="date"/>
            </group>
            </group>
            <footer>
            <button name="create_move" string="Create and post move" type="object" default_focus="1" class="oe_highlight"/>
            <button string="Cancel" class="btn btn-secondary" special="cancel" />
            </footer>
        </form>
        </field>
    </record>


        <record id="evl_tax_adjustments" model="ir.actions.act_window">
            <field name="name">VAT Adjustments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vat.adjustments.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="evl_tax_adjustments_wizard"/>
            <field name="target">new</field>
        </record>
    <menuitem name="VAT Adjustments" id="evl_vat.vat_adjustments" parent="evl_vat.evl_payments" action="evl_vat.evl_tax_adjustments" sequence="10"/> 

</odoo>