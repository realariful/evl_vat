<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_hr_loan">
            <field name="name">Employee Loan</field>
            <field name="sequence">47</field>
        </record>

        <!-->>>>>>>>>>>>>>>>>>>>> groups -->
        <record id="loan_group_manager" model="res.groups">
            <field name="name">Loan Manager</field>
            <field name="category_id" ref="module_category_hr_loan"/>
        </record>

        <record id="loan_group_admin" model="res.groups">
            <field name="name">Loan Admin</field>
            <field name="category_id" ref="module_category_hr_loan"/>
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> -->
        </record>

        <record id="loan_group_accounts" model="res.groups">
            <field name="name">Accounts</field>
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> -->
            <field name="category_id" ref="module_category_hr_loan"/>
        </record>

        <record id="loan_group_man_com" model="res.groups">
            <field name="name">Man Com</field>
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> -->
            <field name="category_id" ref="module_category_hr_loan"/>
        </record>


        <record id="loan_group_md" model="res.groups">
            <field name="name">Managing Director</field>
            <field name="implied_ids" eval="[(4, ref('loan_group_man_com'))]"/>
            <field name="category_id" ref="module_category_hr_loan"/>
        </record>


        <record id="loan_group_user" model="res.groups">
            <field name="name">Loan User</field>
            <field name="category_id" ref="module_category_hr_loan"/>
        </record>

        <!-->>>>>>>>>>>>>>>>>>>>> access rules -->


        <record id="admin_super_access_loan" model="ir.rule">
            <field name="name">Admin</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(6,0,[
                                            ref('loan_group_md'),
                                            ref('loan_group_man_com'),
                                            ref('loan_group_accounts'),
                                            ref('loan_group_admin'),
                                            ref('base.group_erp_manager'),

                                        ])]"/>
        </record>

        <record id="loan_manager" model="ir.rule">
            <field name="name">Manager</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id),'|', ('employee_id.parent_id.user_id', '=', user.id),('employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('loan_group_manager'))]"/>
        </record>

        <record id="loan_officer_requester" model="ir.rule">
            <field name="name">User</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('loan_group_user'),ref('base.group_user')])]"/>
        </record>

    </data>
</odoo>
