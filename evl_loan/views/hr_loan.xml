<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Loan Tree view-->
    <record id="hr_loan_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan Requests">
                <field name="loan_record"/>
                <field name="employee_id"/>
                <field name="company_id"/>
                <field name="status"/>
                <field name="loan_amount"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--Loan Form view-->
    <record id="hr_loan_form_view" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form duplicate="0" string="Loan Request">
                <field name="supervisor_can_approve" invisible="1"/>
                <field name="admin_check_compute" invisible="1"/>

                <header>
                    <button name="action_submit" type="object" string="Submit" states="draft" class="oe_highlight"/>
                    <button name="action_supervisor_approve" type="object" string="Supervisor Approval" attrs="{'invisible': ['|',('state', '!=', 'confirm'),('supervisor_can_approve', '=', False)]}" class="oe_highlight"/>
                    <button name="action_hr_approve" type="object" string="Hr Approve" states="supervisor" class="oe_highlight" groups="base.group_erp_manager,evl_loan.loan_group_admin"/>
                    <button name="action_accounts_approve" type="object" string="Accounts Approve" states="hr" class="oe_highlight" groups="base.group_erp_manager,evl_loan.loan_group_accounts"/>
                    <button name="action_mancom_approve" type="object" string="Man. Com Approve" states="accounts" class="oe_highlight" groups="base.group_erp_manager,evl_loan.loan_group_man_com"/>
                    <button name="action_md_approve" type="object" string="MD Approve" states="man_com" class="oe_highlight" groups="base.group_erp_manager,evl_loan.loan_group_md"/>
                    <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': ['|',('state', 'in', ['md','cancel'])]}" class="oe_highlight"/>
                    <field name="state" widget="statusbar" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="loan_record" readonly="1"/>
                        </h1>
                    </div>
                    <group col="4">

                        <field name="employee_id" attrs="{'readonly': ['|',('state', '!=', 'draft'),('admin_check_compute', '!=', True)]}" force_save="1" />
                        <!-- <field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}" readonly="1" force_save="1"/> -->
                        <field name="date"/>
                        <field name="department_id"/>
                        <field name="job_position"/>
                        <field name="loan_amount" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="installment" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="payment_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="company_id" readonly="1" force_save='True' />
                        <!-- <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_company"/> -->
                    </group>

                    <group string="Reason for Loan" style="width:100%">
                        <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}" nolabel="1" style="width:100%"/>
                    </group>
                    <notebook>

                        <page groups="evl_loan.loan_group_md,base.group_erp_manager,evl_loan.loan_group_accounts" string="Loan Disburse Information">

                            <label for="loan_account" string="Loan Account"/>
                            <div>
                                <field attrs="{'readonly':[('state','!=','hr')]}" name="loan_account" />
                            </div>
                            <label for="cash_account_id" string="Cash Account"/>
                            <div>
                                <field attrs="{'readonly':[('state','!=','hr')]}" name="cash_account_id" />
                            </div>
                            <label for="journal_id" string="Journal"/>
                            <div>
                                <field attrs="{'readonly':[('state','!=','hr')]}" name="journal_id" />
                            </div>

                            <label for="pay_date" string="Payment Date"/>
                            <div>
                                <field attrs="{'readonly':[('state','!=','hr')]}" name="pay_date" />
                            </div>

                        </page>


                        <page groups="evl_loan.loan_group_md,base.group_erp_manager,evl_loan.loan_group_accounts,evl_employee.group_hradmin_manager" string="Accounting Information">

                            <label for="move_id" string="Accounting Entry"/>
                            <div>
                                <field name="move_id" />
                            </div>

                        </page>
                    </notebook>




                    <notebook>
                        <page string="Installment Information">
                            <field name="loan_lines" readonly="1">
                                <tree string="Installments">
                                    <field name="date" string="Payment Date"/>
                                    <field name="amount"/>
                                    <field name="paid" readonly="1" invisible="1"/>

                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_amount" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <button type="object" name="compute_installment" string="Compute Installment" colspan="2" groups="base.group_erp_manager,evl_loan.loan_group_accounts,evl_loan.loan_group_admin" class="oe_stat_button" icon="fa-clock-o"/>
                            <div class="oe_clear"/>
                        </page>



                    </notebook>


                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- -Loan Form view- line form view -->
    <record id="hr_loan_line" model="ir.ui.view">
        <field name="name">hr loan line</field>
        <field name="model">hr.loan.line</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="employee_id"/>
                        <field name="amount"/>
                        <field name="paid"/>

                        <field name="loan_id">


                            <tree>
                                <field name="employee_id" string="Employee"/>
                            </tree>
                        </field>

                        <field name="payslip_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--loan search view-->
    <record id="view_loan_request_search_form" model="ir.ui.view">
        <field name="name">hr.loan.search.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <search string="Loan">
                <filter string="My Requests" name="myloan" domain="[('employee_id.user_id.id', '=', uid)]" />
                <field name="employee_id" string="Employee"/>
                <field name="department_id" string="Department"/>
                <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                <filter string="Department" name="department_id" context="{'group_by':'department_id'}"/>
                <filter string="Status" name="status" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>


    <!--loan menu-->
    <menuitem name="Loans" id="menu_hr_loans_and_advances" parent="hr.menu_hr_root" sequence="20"/>

    <record id="action_hr_loan_request" model="ir.actions.act_window">
        <field name="name">Request for Loan</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_myrequest': 1}</field>
        <!-- <field name="search_view_id" ref="view_loan_request_search_form"/> -->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Loan request.
            </p>
            <p>
                Use this menu to create loan requests.
            </p>
        </field>
    </record>

    <menuitem id="notice_menue_root" name="Employee Loan " sequence="12"/>
    <menuitem name="Loan Requests" id = "hr_loan_lines" parent="notice_menue_root" action="action_hr_loan_request" />



    <!-- Shortcuts -->
    <record id="act_hr_employee_loan_request" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'search_default_myloan': 1}</field> -->
        <!-- <field name="view_id" eval="hr_loan_tree_view"/> -->
        <field name="context">{'search_default_myloan': 1}</field>

    </record>


    <!-- HR employee inherit Loans -->
    <record id="view_employee_form_loan_inherit" model="ir.ui.view">
        <field name="name">hr.employee.loan.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="act_current_employee_loan" type="object" class="oe_stat_button" icon="fa-calendar" groups="hr.group_hr_manager">
                    <field name="loan_count" widget="statinfo" string="Loans"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>