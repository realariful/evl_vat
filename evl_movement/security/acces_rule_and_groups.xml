<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">



        <record model="ir.module.category" id="module_category_movement_movement">
            <field name="name">Movement</field>
            <field name="sequence">13</field>
        </record>

        <record id="movement_group_manager" model="res.groups">
            <field name="name">Movement Manager</field>
            <field name="category_id" ref="module_category_movement_movement"/>
        </record>

        <record id="movement_group_admin" model="res.groups">
            <field name="name">Movement Admin</field>
            <field name="category_id" ref="module_category_movement_movement"/>
            <field name="implied_ids" eval="[(4, ref('evl_employee.group_hradmin_manager'))]"/>


        </record>

        <record id="movement_group_user" model="res.groups">
            <field name="name">Movement User</field>
            <field name="category_id" ref="module_category_movement_movement"/>
        </record>


        <record id="movement_multi_company" model="ir.rule">
            <field name="name">Movement Multi Company</field>
            <field name="model_id" ref="model_movement_movement"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

        <record id="admin_super_access_movement" model="ir.rule">
            <field name="name">Movement/Admin</field>
            <field name="model_id" ref="model_movement_movement"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_erp_manager')), (4, ref('movement_group_admin'))]"/>
        </record>

        <record id="movement_manager" model="ir.rule">
            <field name="name">Movement/Manager</field>
            <field name="model_id" ref="model_movement_movement"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id),'|', ('employee_id.parent_id.user_id', '=', user.id),('employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('movement_group_manager'))]"/>
        </record>

        <record id="movement_officer_requester" model="ir.rule">
            <field name="name">Movement/User</field>
            <field name="model_id" ref="model_movement_movement"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('base.group_user'),ref('movement_group_user')])]"/>

        </record>

    </data>
</odoo>
